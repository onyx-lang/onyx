

use core {*}

main :: (args: [] cstr) {
    defer println("At the end!")
    i := 0
    while i < 10 {
        defer i += 1
        defer printf("Index is {}\n", i)

        if i == 3 {
            printf("Skipping {}!!\n", i)
            continue
        }

        print("Doing something with ")
    }
    printf("i is {}\n", i)

    println("\n\n===================================")
    i = 0
    while i < 10 {
        defer i += 1
        defer printf("Index is {}\n", i)

        if i == 3 {
            printf("Skipping {}!!\n", i)
            break
        }

        print("Doing something with ")
    }
    printf("i is {}\n", i)

    println("\n\n===================================")
    switch i {
        case 4 {
            defer println("Deferred!")
            {
                defer println("In block deferred!")
                fallthrough
            }
            println("Case 4!")
        }

        case _ {
            println("Default!")
        }
    }
}
