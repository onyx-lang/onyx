use core.conv
use core

use core {
    println
}


main :: () {
    output: dyn_str
    defer dyn_str.free(&output)

    dyn_str.append(&output, "Hello")
    dyn_str.append(&output, "World")
    dyn_str.append(&output, '!')

    dyn_str.insert(&output, 5, ", ")

    println(output)


    // `conv.format` appends to the dynamic string. Use
    // `dyn_str.clear` to empty it first.
    dyn_str.clear(&output)
    conv.format(&output, "This is another {}.", "sentence")

    println(output)
}