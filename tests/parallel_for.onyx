#load "core/std"

use package core

main :: () {
    sum := 0;

    thread_data := .{
        sum = ^sum,
        mutex = sync.Mutex.{},
    };
    sync.mutex_init(^thread_data.mutex);

    iter.parallel_for(0 .. 10000, 4, ^thread_data) {
        sync.scoped_mutex(^thread_data.mutex);
        *thread_data.sum += it;
    }

    println(sum);
}

